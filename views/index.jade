extends layout

block content
	script(src="/socket.io/socket.io.js")
	
	script.
		var socket = io.connect();
		console.log(socket);
		socket.on('message',function(message){console.log(message)});
		socket.on('twiit',function(twiit){console.log(twiit)});
	section(class="left-side")
		div(id="formulaire")
			a(href="/?page=0")
				img(src="/images/logo_cigogne.png" class="logo")
			h1 Bienvenue sur TWR!
			if response
				if response == "Success"
					p(class="response success")
				else if response == "Fail"
					p(class="response fail")
				else if response== "Bad"
					p(class="response bad")
				else if response=="no_user"
					p(class="response no_user")
				else if response=="nothing"
					p(class="response nothing")
	
			form(action="/new_twiit",enctype="multipart/form-data", method="POST")
				input(type="text" name="user_name" placeholder="Votre Pseudo")
				textarea(name="twiit", placeholder="Votre twiit")
				input(type="file" name="image")
				button(type="submit" class="boutton_send")
					img(src="/images/twiit.png" class="image_send")
		if(page!=0)
			a(href=precedent) Pr√©cedent
		if(page<maximum)
			a(href=suivant) Suivant
	ul
		each twiit in twiits
			li(class="twiits")
				a(href="twiit_page?twiit="+twiit.filename+"&page="+page)
					p(class="name")=twiit.name
				if twiit.img != ""
					a(href=twiit.img)
						img(src=twiit.img class="image_twiit")
				p(class="message")=twiit.message
				p(class="date")=twiit.date
	
	script(type='text/javascript' src='/javascripts/index.js')
