doctype html

html

	head

		title Page de #{title}   
		link(href="/images/favicon.png", rel="shortcut icon")
		link(rel='stylesheet' href='./stylesheets/styles.css')
		link(rel='stylesheet' href='./stylesheets/styles_twiitPage.css')
		script(src="socket.io/socket.io.js")
		script(src="./javascripts/index.js")

	body

		a(href="/?page=0")
			img(src="/images/logo_cigogne.png" class="logo-link")

		br

		a(href="/?page="+page ) Retour

		p(class="date")= date

		a(href="/search?user=#{name}" class="name") #{name}
		| 's twiit :

		br
		br

		a(href=img class="link-image")
			img(src=img class="image_twiit")

		p(class="message")=message

		br

		h2 Commentaires :

		ul(class="comment-list")
			each comment in comments
				li=comment

		form(action='/stock_comment', method="POST" class="form-comment")
			input(type="text" placeholder="Your nickname (Optionnal)" name="user" class="input-username")
			textarea( name="commentaire" placeholder="Your comment" class="input-comment")
			input(type="hidden" value=twiit name="twiit" readonly)
			input(type="hidden" value=page name="page"  readonly)
			button(type="submit") Send
		
		div(class="ws" id="connected-users")
		div(id="oModal" class="cModal")
			a(id="goToTwiit")
